h1=title
a(href='/handcards/new') new card
table
  tr
    th keywords
    th syntax
    th example
    th priority
    th sourceURL
    th description
  if cards
    each card, index in cards
      tr
        td= card.myKeywords
        td= card.syntax
        td= card.example
        td= card.priority
        td= card.sourceURL
        td= card.description
        td
          a(href='/handcards/get/#{card.id}') show 
        td
          a(href='/handcards/edit/#{card.id}') edit 
        td  
          a(href='') delete