.container
  .row
    .col-12
      p.tip Tip: Specify the language in your query to get more accurate results.
      if snippets
        each result, index in snippets
          //=JSON.stringify(result)
          div(onclick="location.href='#{result.clickurl}'").result
            if result.type == 'snippet'
              if result.info.description != ''
                p.infotext= result.info.description 
              if result.info.syntax != ''
                p.miniheader syntax
                pre.snippet
                  code= result.info.syntax
              if result.info.example != ''
                p.miniheader example
                pre.snippet
                  code= result.info.example
              if result.info.gsnippet != ''
                pre.snippet
                  code= result.info.gsnippet
              if result.info.qnaQuestion != '' && result.info.qnaSnippet != ''
                p.miniheader question 
                p.infotext= result.info.qnaQuestion
                p.miniheader answer snippet
                pre.snippet
                  code= result.info.qnaSnippet
            else if result.type == 'normal'
              p.dispurl= result.dispurl
              h2.title= result.title.replace(/<\/?[^>]+(>|$)/g, "")
              p.abstract= result.abstract.replace(/<\/?[^>]+(>|$)/g, "")

        


